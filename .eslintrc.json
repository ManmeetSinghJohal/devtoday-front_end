{
  "plugins": [
    "import",
    "prettier",
    "@typescript-eslint",
    "tailwindcss",
    "unused-imports"
  ],
  "extends": [
    "next/core-web-vitals",
    "standard",
    "plugin:@typescript-eslint/recommended",
    "plugin:tailwindcss/recommended",
    "prettier"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "rules": {
    "no-unused-vars": [
      "error",
      {
        "varsIgnorePattern": ["**/*.d.ts"],
        "argsIgnorePattern": ["**/*.d.ts"]
      }
    ],
    "@typescript-eslint/no-explicit-any": "warn",
    "unused-imports/no-unused-imports": "error",
    "import/order": [
      "error",
      {
        "groups": [
          "builtin",
          "external",
          "internal",
          "parent",
          "sibling",
          "index"
        ],
        "newlines-between": "always",
        "alphabetize": {
          "order": "asc",
          "caseInsensitive": true
        }
      }
    ]
  }
}
